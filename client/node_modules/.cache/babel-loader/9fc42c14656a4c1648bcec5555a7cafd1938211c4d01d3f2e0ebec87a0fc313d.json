{"ast":null,"code":"import AppHeader from '../components/header';\nimport AppLeftsidebar from '../components/leftsidebar';\nimport AppRightsidebar from '../components/rightsidebar';\nimport EasyMDE from 'easymde';\nimport Savedraftbuttoncontainer from '../components/savedraftbuttoncontainer';\nimport * as marked from 'marked';\nexport default {\n  name: 'Projectworkspace',\n  data: function data() {\n    return {\n      draftName: '',\n      mde: null\n    };\n  },\n  components: {\n    AppHeader: AppHeader,\n    AppLeftsidebar: AppLeftsidebar,\n    AppRightsidebar: AppRightsidebar,\n    Savedraftbuttoncontainer: Savedraftbuttoncontainer\n  },\n  mounted: function mounted() {\n    var _this = this;\n    this.$nextTick(function () {\n      _this.mde = new EasyMDE({\n        element: document.getElementById('markdown-editor'),\n        toolbar: [\"bold\", \"italic\", \"heading\", \"|\", \"quote\", \"unordered-list\", \"ordered-list\", \"|\", \"link\", \"image\", \"|\", \"guide\"]\n      });\n      _this.mde.codemirror.refresh();\n    });\n  },\n  methods: {\n    // Your existing methods here\n    saveDraft: function saveDraft() {\n      // Add this method\n      // Get the content of the EasyMDE editor\n      var draftContent = this.easyMDE.value();\n\n      // Get the draftName= this.draftName;\n      var draftName = this.draftName;\n\n      // Make a POST request to the server\n      axios.post(process.env.VUE_APP_FLASK_APP_URL + \"/project_workspace/\".concat(this.projectId), {\n        action: 'create_draft',\n        draft_data: {\n          name: draftName,\n          content: draftContent\n          // Add any other data you need to send to the server here\n        }\n      }).then(function (response) {\n        // Handle the response from the server\n        console.log(response.data);\n      }).catch(function (error) {\n        // Handle the error\n        console.error(error);\n      });\n    }\n  },\n  computed: {\n    compiledMarkdown: function compiledMarkdown() {\n      return this.mde ? marked.marked(this.mde.value()) : '';\n    }\n  }\n};","map":{"version":3,"names":["AppHeader","AppLeftsidebar","AppRightsidebar","EasyMDE","Savedraftbuttoncontainer","marked","name","data","draftName","mde","components","mounted","_this","$nextTick","element","document","getElementById","toolbar","codemirror","refresh","methods","saveDraft","draftContent","easyMDE","value","axios","post","process","env","VUE_APP_FLASK_APP_URL","concat","projectId","action","draft_data","content","then","response","console","log","catch","error","computed","compiledMarkdown"],"sources":["/home/user/School/CSC330/ThinkLink/client/src/views/projectworkspace.vue"],"sourcesContent":["<template>\n  <div class=\"projectworkspace-container\">\n    <div class=\"projectworkspace-container1\">\n      <app-header rootClassName=\"header-root-class-name5\"></app-header>\n      <div class=\"projectworkspace-body\">\n        <app-leftsidebar></app-leftsidebar>\n        <div class=\"projectworkspace-pagemain\">\n          <input class=\"draft-name-input\" v-model=\"draftName\" placeholder=\"Enter draft name\" />\n          <div v-html=\"compiledMarkdown\" class=\"markdown-preview\"></div>\n          <textarea id=\"markdown-editor\"></textarea>\n          <savedraftbuttoncontainer @click=\"saveDraft\"></savedraftbuttoncontainer>\n        </div>\n        <app-rightsidebar></app-rightsidebar>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport AppHeader from '../components/header'\nimport AppLeftsidebar from '../components/leftsidebar'\nimport AppRightsidebar from '../components/rightsidebar'\nimport EasyMDE from 'easymde'\nimport Savedraftbuttoncontainer from '../components/savedraftbuttoncontainer'\nimport * as marked from 'marked';\n\nexport default {\n  name: 'Projectworkspace',\n  data() {\n    return {\n      draftName: '',\n      mde: null,\n    }\n  },\n  components: {\n    AppHeader,\n    AppLeftsidebar,\n    AppRightsidebar,\n    Savedraftbuttoncontainer,\n  },\n  mounted() {\n    this.$nextTick(() => {\n      this.mde = new EasyMDE({\n        element: document.getElementById('markdown-editor'),\n        toolbar: [\n          \"bold\", \n          \"italic\", \n          \"heading\", \"|\", \n          \"quote\",\n          \"unordered-list\",\n          \"ordered-list\", \"|\",\n          \"link\",\n          \"image\", \"|\",\n          \"guide\"\n        ],      \n      })\n      this.mde.codemirror.refresh()\n      })\n  },\n  methods: {\n    // Your existing methods here\n\n    saveDraft() {  // Add this method\n      // Get the content of the EasyMDE editor\n      const draftContent = this.easyMDE.value();\n      \n      // Get the draftName= this.draftName;\n      const draftName = this.draftName;\n\n      // Make a POST request to the server\n      axios.post(process.env.VUE_APP_FLASK_APP_URL + `/project_workspace/${this.projectId}`, {\n        action: 'create_draft',\n        draft_data: {\n          name: draftName,\n          content: draftContent,\n          // Add any other data you need to send to the server here\n        },\n      })\n      .then(response => {\n        // Handle the response from the server\n        console.log(response.data);\n      })\n      .catch(error => {\n        // Handle the error\n        console.error(error);\n      });\n    },\n  },\n  computed: {\n    compiledMarkdown() {\n      return this.mde ? marked.marked(this.mde.value()) : '';\n    }\n  }\n}\n</script>\n\n<style scoped>\n.projectworkspace-container {\n  width: 100%;\n  display: flex;\n  overflow: auto;\n  min-height: 100vh;\n  align-items: center;\n  border-color: var(--dl-color-gray-black);\n  border-width: 0px;\n  flex-direction: column;\n  justify-content: center;\n  background-color: var(--dl-color-gray-white);\n}\n.projectworkspace-container1 {\n  flex: 1;\n  width: 100%;\n  height: 100%;\n  display: flex;\n  align-items: flex-start;\n  flex-direction: column;\n  justify-content: flex-start;\n}\